{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "kotacom-ai/ai-image",
    "title": "AI Image",
    "category": "kotacom-ai",
    "icon": "format-image",
    "description": "Generate AI images using multiple providers with fallback support",
    "supports": {
        "html": false,
        "align": ["left", "center", "right", "wide", "full"]
    },
    "attributes": {
        "prompt": {
            "type": "string",
            "default": ""
        },
        "size": {
            "type": "string",
            "default": "800x600"
        },
        "provider": {
            "type": "string",
            "default": "unsplash"
        },
        "alt": {
            "type": "string",
            "default": ""
        },
        "caption": {
            "type": "string",
            "default": ""
        },
        "featured": {
            "type": "boolean",
            "default": false
        },
        "fallback": {
            "type": "boolean",
            "default": true
        },
        "imageUrl": {
            "type": "string",
            "default": ""
        },
        "imageId": {
            "type": "number",
            "default": 0
        }
    },
    "editorScript": "file:./editor.js",
    "style": "file:./style.css",
    "editorStyle": "file:./editor.css"
}